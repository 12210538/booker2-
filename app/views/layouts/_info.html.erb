<div class="container">
  <div class="row no-gutters">
    <div class="col-md-4">
      <div class="infomation-box">
        <h4 class="sub-title">User info</h4>
        <div class="profile-image">
          <%= image_tag user.get_image, size:"100x100" %>
        </div>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th><br>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(user.id) do %>
          <span class="col-xs-12 btn btn-outline-secondary btn-block fas fa-user-cog">
            <i class="fa-solid fa-user-gear"></i>
          </span>
          <% end %>
        </div>
        <div class="form-box">
          <h4 class="sub-title">New book</h4>
          <%= form_with model:book do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_field :body %>
          <%= f.submit "Create Book", class:"btn btn-sm btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>