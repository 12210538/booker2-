<div class="container">
  <%= render "layouts/message", {text: @user} %>
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/info", {user: @user, book: @book} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="sub-title">Users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="user-image">image</th>
            <th class="user-name">name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td class="user-image">
              <%= image_tag user.get_image, size:"50x50" %>
            </td>
            <td class="user-name"><%= user.name %></td>
            <td class="show"><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>