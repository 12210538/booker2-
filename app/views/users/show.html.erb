<div class="container">
  <%= render "layouts/message", {text: @user} %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/info', {user: @user, book: @book} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="sub-title">Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <th colspan="1"></th>
          <th class="content-title">Title</th>
          <th class="content-body">Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <%= link_to user_path(book.user_id) do %>
            <td class="user-profile_image">
              <%= image_tag book.user.get_image, size:"50x50" %>
            </td>
            <% end %>
            <td class="content-title"><%= link_to book.title, book_path(book) %></td>
            <td class="content-body"><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>